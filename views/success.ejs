    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get the countdown element
            const countdown = document.getElementById("countdown");

            // Set the duration of the countdown in milliseconds (e.g., 10000 ms = 10 seconds)
            const duration = 10000;

            // Start the countdown
            setTimeout(function() {
                // Redirect back to the home page
                window.location.href = "/";
            }, duration);

            // Update the countdown element to display the remaining time
            let timeRemaining = duration;
            const updateCountdown = function() {
                countdown.textContent = `Redirecting back to the home page in ${Math.ceil(timeRemaining / 1000)} seconds`;
                timeRemaining -= 1000;
                if (timeRemaining >= 0) {
                    setTimeout(updateCountdown, 1000);
                }
            };

            // Start updating the countdown
            updateCountdown();
        });
    </script>
    <style>
        .btn-success {
            background-color: #228E20;
            /* Add any other styles you want for the button here */
        }
    </style>
</head>
<body>


    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div>
            <div class="mb-4 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="text-success" width="75" height="75" fill="#228E20" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
