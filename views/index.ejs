<style>
  h4{
    font-family: 'Poppins';
  }
  #heading1{
    font-family: 'Poppins';
    font-size: 50px;
    font-weight: 700;
    /* color: #fff; */
    /* background-color: black; */
    margin-top: 100px;
  }
  #heading2{
    font-family: 'Poppins';
  }
  .section-title{
    font-family: 'Inter';
  }

  #contact-section {
    font-family: 'Inter';
  }

  .accordion-button:not(.collapsed) {
      background-color: green;
      color: white;
    }


</style>
